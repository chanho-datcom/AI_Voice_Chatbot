<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/user_back_color"
    android:layout_gravity="start"
    android:layout_margin="5dp"
    android:elevation="8dp"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/user_back_color">

    <LinearLayout
        android:id="@+id/item_Message_LinearLayout_destination"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_man"
            android:id="@+id/item_Message_imageView_profile"/>

        <TextView
            android:id="@+id/item_Message_textView"
            android:layout_toLeftOf = "@id/item_Message_imageView_profile"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

 <LinearLayout
     android:layout_below="@id/item_Message_LinearLayout_destination"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">

     <TextView
         android:id="@+id/item_Message_textView_name"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="15dp"
         android:text="Me"
         android:textColor="@color/white" />
 </LinearLayout>



</RelativeLayout>